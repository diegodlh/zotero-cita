{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"target": "es2017",
		"jsx": "react",
		"allowJs": true,
		"downlevelIteration": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"translators",
		"node_modules"
	]
}