{
	"name": "zotero-cita",
	"version": "1.0.0-beta.7",
	"description": "Cita: a Wikidata addon for Zotero",
	"config": {
		"addonName": "Zotero Cita",
		"addonID": "zotero-wikicite@wikidata.org",
		"addonRef": "zotero-wikicite",
		"addonInstance": "ZoteroCita",
		"prefsPrefix": "extensions.cita",
		"releasePage": "https://github.com/diegodlh/zotero-cita/releases",
		"updateJSON": "https://github.com/diegodlh/zotero-cita/releases/latest/download/update.json"
	},
	"main": "src/index.ts",
	"scripts": {
		"start": "zotero-plugin serve",
		"build": "tsc --noEmit && zotero-plugin build",
		"lint": "prettier --write . && eslint . --fix",
		"release": "release-it --only-version --preReleaseId=beta",
		"postinstall": "patch-package",
		"test": "echo \"Error: no test specified\" && exit 1",
		"update-deps": "npm update --save",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/diegodlh/zotero-cita.git"
	},
	"author": "Diego de la Hera (https://diegodlh.conversodromo.com.ar/)",
	"contributors": [
		"Dominic Dall'Osto"
	],
	"license": "GPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/diegodlh/zotero-cita/issues"
	},
	"homepage": "https://github.com/diegodlh/zotero-cita",
	"dependencies": {
		"@react-hook/resize-observer": "^2.0.2",
		"openalex-sdk": "^1.1.6",
		"prop-types": "^15.7.2",
		"quickstatements-to-wikibase-edit": "^1.2.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-error-boundary": "^4.1.1",
		"react-intersection-observer": "^9.13.1",
		"semver-parser": "^4.1.6",
		"wikibase-edit": "^7.0.4",
		"wikibase-sdk": "^10.0.2",
		"zotero-plugin-toolkit": "^4.0.6"
	},
	"devDependencies": {
		"@types/language-tags": "^1.0.4",
		"@types/lodash": "^4.17.9",
		"@types/node": "^20.10.4",
		"@types/react-dom": "^18.3.0",
		"eslint": "^8.55.0",
		"husky": "^9.1.6",
		"language-tags": "^1.0.9",
		"lint-staged": "^15.2.10",
		"patch-package": "^8.0.0",
		"prettier": "^3.1.1",
		"release-it": "^17.6.0",
		"typescript": "^5.3.3",
		"typescript-eslint": "^7.14.1",
		"zotero-plugin-scaffold": "^0.0.34",
		"zotero-types": "^3.0.1"
	},
	"engines": {
		"npm": ">=8.1"
	},
	"prettier": {
		"printWidth": 80,
		"useTabs": true,
		"tabWidth": 4,
		"endOfLine": "lf",
		"overrides": [
			{
				"files": [
					"*.xhtml"
				],
				"options": {
					"htmlWhitespaceSensitivity": "css"
				}
			}
		]
	},
	"release-it": {
		"git": {
			"tagName": "v${version}"
		},
		"npm": {
			"publish": false
		},
		"github": {
			"release": false,
			"assets": [
				"build/*.xpi"
			]
		},
		"hooks": {
			"before:init": "npm run lint",
			"after:bump": "npm run build"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --fix"
		],
		"*": [
			"prettier --ignore-unknown --write"
		]
	}
}
